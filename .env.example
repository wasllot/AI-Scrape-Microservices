# ============================================
# Environment
# ============================================
# Options: development, staging, production
ENV=development

# ============================================
# Database Configuration
# ============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=vector_db
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# AI Service Configuration
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile
EMBEDDING_MODEL=models/gemini-embedding-001
CHAT_MODEL=models/gemini-1.5-flash
EMBEDDING_DIMENSION=3072

# ============================================
# Application Configuration
# ============================================
APP_NAME=AI & RAG Engine
DEBUG=false
ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# ============================================
# JWT Authentication
# ============================================
# Generate a secure key: python -c "from jose import jwt; import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Scraper Service (when ENV=scraper)
# ============================================
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
PLAYWRIGHT_CONTEXTS=5
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
